<div class="page-header">
  <h1>Show Resume</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Year:</strong></dt>
  <dd><%= @resume.year %></dd>
  <dt><strong>Title:</strong></dt>
  <dd><%= @resume.title %></dd>
  <dt><strong>Period:</strong></dt>
  <dd><%= @resume.period %></dd>
  <dt><strong>Body:</strong></dt>
  <dd><%= simple_format @resume.body %></dd>
  <dt><strong>Created At:</strong></dt>
  <dd><%=l @resume.created_at %></dd>
</dl>

<%= link_to "Back", admin_resumes_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_resume_path(@resume), :class => 'btn btn-default' %>
<%= link_to "Delete", admin_resume_path(@resume),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>