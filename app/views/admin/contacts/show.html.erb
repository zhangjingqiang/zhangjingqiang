<div class="page-header">
  <h1>Show Contact</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @contact.name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @contact.email %></dd>
  <dt><strong>Subject:</strong></dt>
  <dd><%= @contact.subject %></dd>
  <dt><strong>Message:</strong></dt>
  <dd><%= simple_format @contact.message.html_safe %></dd>
  <dt><strong>Created At:</strong></dt>
  <dd><%=l @contact.created_at %></dd>
</dl>

<%= link_to "Back", admin_contacts_path, :class => 'btn btn-default'  %>
<%= link_to "Delete", admin_contact_path(@contact),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>