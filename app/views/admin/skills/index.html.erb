<div class="page-header">
  <h1>Skills</h1>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.level %></td>
        <td><%=l skill.created_at %></td>
        <td><%=l skill.updated_at %></td>
        <td>
          <%= link_to admin_skill_path(skill), :class => "btn btn-info" do %>
            R
          <% end %>
          <%= link_to edit_admin_skill_path(skill), :class => "btn btn-success" do %>
            U
          <% end %>
          <%= link_to admin_skill_path(skill), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            D
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="clear:both;"></div>

<%= link_to "New",
            new_admin_skill_path,
            :class => 'btn btn-primary' %>