<div class="page-header">
  <h1>Contact Infos</h1>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Body1</th>
      <th>Body2</th>
      <th>Body3</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contact_infos.each do |contact_info| %>
      <tr>
        <td><%= simple_format contact_info.body1 %></td>
        <td><%= simple_format contact_info.body2 %></td>
        <td><%= simple_format contact_info.body3 %></td>
        <td><%=l contact_info.created_at %></td>
        <td><%=l contact_info.updated_at %></td>
        <td>
          <%= link_to admin_contact_info_path(contact_info), :class => "btn btn-info" do %>
            R
          <% end %>
          <%= link_to edit_admin_contact_info_path(contact_info), :class => "btn btn-success" do %>
            U
          <% end %>
          <%= link_to admin_contact_info_path(contact_info), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            D
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="clear:both;"></div>

<%= link_to "New",
            new_admin_contact_info_path,
            :class => 'btn btn-primary' %>