<div class="page-header">
  <h1>Show Contact Info</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Body1:</strong></dt>
  <dd><%= simple_format @contact_info.body1 %></dd>
  <dt><strong>Body2:</strong></dt>
  <dd><%= simple_format @contact_info.body2 %></dd>
  <dt><strong>Body3:</strong></dt>
  <dd><%= simple_format @contact_info.body3 %></dd>
  <dt><strong>Created At:</strong></dt>
  <dd><%=l @contact_info.created_at %></dd>
</dl>

<%= link_to "Back", admin_contact_infos_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_contact_info_path(@contact_info), :class => 'btn btn-default' %>
<%= link_to "Delete", admin_contact_info_path(@contact_info),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>