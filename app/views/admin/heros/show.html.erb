<div class="page-header">
  <h1>Show Hero</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Title:</strong></dt>
  <dd><%= @hero.title %></dd>
  <dt><strong>Body:</strong></dt>
  <dd><%= simple_format @hero.body %></dd>
  <dt><strong>Created At:</strong></dt>
  <dd><%=l @hero.created_at %></dd>
</dl>

<%= link_to "Back", admin_heros_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_hero_path(@hero), :class => 'btn btn-default' %>
<%= link_to "Delete", admin_hero_path(@hero),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>