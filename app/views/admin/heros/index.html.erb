<div class="page-header">
  <h1>Heros</h1>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= hero.title %></td>
        <td><%= simple_format hero.body %></td>
        <td><%=l hero.created_at %></td>
        <td><%=l hero.updated_at %></td>
        <td>
          <%= link_to admin_hero_path(hero), :class => "btn btn-info" do %>
            Show
          <% end %>
          <%= link_to edit_admin_hero_path(hero), :class => "btn btn-success" do %>
            Edit
          <% end %>
          <%= link_to admin_hero_path(hero), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="clear:both;"></div>

<%= link_to "New",
            new_admin_hero_path,
            :class => 'btn btn-primary' %>